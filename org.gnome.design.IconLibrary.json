{
    "app-id": "org.gnome.design.IconLibrary",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command": "icon-library",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--own-name=org.gnome.design.IconLibrary.SearchProvider"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "env": {
            "CARGO_HOME": "/run/build/icon-library/cargo"
        }
    },
    "modules": [{
            "name": "libhandy",
            "buildsystem": "meson",
            "config-opts": [
                "-Dintrospection=disabled",
                "-Dgtk_doc=false",
                "-Dtests=false",
                "-Dexamples=false",
                "-Dvapi=false",
                "-Dglade_catalog=disabled"
            ],
            "cleanup": [
                "/include",
                "/lib/pkgconfig",
                "/bin"
            ],
            "sources": [{
                "type": "git",
                "url": "https://source.puri.sm/Librem5/libhandy.git",
                "tag": "v0.0.10",
                "commit": "2d777677352d037b6f5cc24d9c1c8d9a74ac0ded"
            }]
        },
        {
            "name": "icon-library",
            "buildsystem": "meson",
            "sources": [{
                "type": "archive",
                "url": "https://gitlab.gnome.org/World/design/icon-library/uploads/9fcee27ceafedc9818b762b4a85fe504/icon-library-0.0.4.tar.xz",
                "sha256": "16c4566563bb399ae18b762a910c3d56bf3f746a267727b88749789946c4d3c5"
            }]
        }
    ]
}
